{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Postman Logs",
	"scopeName": "source.postman_log",
	"patterns": [
		{
			"include": "#logline"
		}
	],
	"repository": {
		"logline": {
			"patterns": [
				{
					"match": "^\\[([0-9]+)\\]\\[([0-9]+)\\]\\[([a-zA-Z]+)\\]\\[(info|error|warn)\\]\\[(.*)\\]$",
					"captures": {
						"0": {
							"name": "support.type"
						},
						"1": {
							"name": "support.function"
						},
						"2": {
							"name": "support.variable"
						},
						"3": {
							"name": "keyword.control"
						},
						"4": {
							"patterns": [
								{
									"match": "error",
									"captures": { 
										"0": {
											"name": "invalid"
										}
									}	
								},
								{
									"match": "info",
									"captures": {
										"0": {
											"name": "support.function"
										}
									}
								},
								{
									"match": "warn",
									"captures": {
										"0": {
											"name": "string.quoted.triple"
										}
									}
								}
							]
						},
						"5": {
							"name": "constant.numeric",
							"patterns": [
								{
									"include": "#quotes"
								},
								{
									"include": "#brackets"
								},
								{
									"include": "#symbols"
								},
								{
									"include": "#version"
								},
								{
									"include": "#boolean"
								},
								{
									"include": "#keywords"
								},
								{
									"include": "#number"
								}
							]
						}
					}
				}
			]
		},
		"quotes": {
			"match": "\"|'",
			"captures": {
				"0": {
					"name": "keyword.control"
				}
			}
		},
		"brackets": {
			"match": "(\\[|\\])|(\\(|\\))|({|})",
			"captures": {
				"1": {
					"name": "string.quoted.single"
				},
				"2": {
					"name": "keyword.operator.new"
				},
				"3": {
					"name": "keyword.operator"
				}
			}
		},
		"symbols": {
			"match":"[:~,&=]|-",
			"captures": {
				"0": {
					"name": "string.quoted.double"
				}
			}
		},
		"version": {
			"match": "[0-9]+\\.[0-9]+\\.[0-9]+",
			"captures": {
				"0": {
					"name": "support.function"
				}
			}
		},
		"boolean": {
			"match": "true|false",
			"captures": {
				"0": {
					"name": "storage.type"
				}
			}
		},
		"keywords": {
			"match": "x64|x32",
			"captures": {
				"0": {
					"name": "keyword.control"
				}
			}
		},
		"number": {
			"match": "\\b[0-9]+\\b",
			"captures": {
				"0": {
					"name": "support.class"
				}
			}
		},
		"uuid": {
			"match":  "[a-fA-F0-9]{8,8}-[a-fA-F0-9]{4,4}-[a-fA-F0-9]{4,4}-[a-fA-F0-9]{4,4}-[a-fA-F0-9]{12,12}",
			"captures": {
				"0": {
					"name":"support.type"
				}
			}	
		}
	}
}