{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Postman Logs",
	"scopeName": "source.postman_collection.json",
	"patterns": [
		{
			"include": "#sections"
		},
		{
			"include": "#execblock"
		}
	],
	"repository": {
		"sections": {
			"patterns": [
				{
					"match": "\"(_postman_id|variable|raw|response|protocol|formdata|mode|body|host|schema|script|info|item|name|event|id|listen|request|auth|type|basic|url|header|method|path|query|key|value|disabled)\"(:)(\\s*\"?(.*)\"?)?",
					"captures": {
						"0": {
							"name": "string.quoted.double"
						},
						"1": {
							"name": "support.function.section"
						},
						"2": {
							"name": "comment.line.number-sign"
						},
						"3": {
							"name": "constant.numeric",
							"patterns": [
								{
									"include": "#datatype"
								},
								{
									"include": "#jsbrackets"
								},
								{
									"include": "#jsdot"
								},
								{
									"include": "#number"
								}
							]
						}
					}
				}
			]
		},
		"datatype": {
			"match": "(GET|POST|DELETE|PUT|OPTIONS|HEAD)|(true|false)|([a-fA-F0-9]{8,8}-[a-fA-F0-9]{4,4}-[a-fA-F0-9]{4,4}-[a-fA-F0-9]{4,4}-[a-fA-F0-9]{12,12})",
			"captures": {
				"1": {
					"name": "constant.language"
				},
				"2": {
					"name": "support.variable"
				},
				"3": {
					"name": "support.type"
				}
			}
		},
		"execblock": {
			"begin": "\"(exec)\":\\s*(\\{|\\[)",
			"end": "(\\}|\\])",
			"beginCaptures": {
				"1": {
					"name": "constant.numeric"
				},
				"0": {
					"name": "string.quoted.double"
				},
				"2": {
					"name": "support.variable"
				}
			},
			"endCaptures": {
				"0": {
					"name": "support.variable"
				}
			},
			"patterns": [
				{
					"include": "#scriptlines"
				}
			]
		},
		"scriptlines": {
			"match": "\"(.*)\"",
			"captures": {
				"0": {
					"name": "constant.character"
				},
				"1": {
					"patterns": [
						{
							"include": "#js"
						}
					]
				}
			}
		},
		"js": {
			"match": "(.*)",
			"captures": {
				"1": {
					"patterns": [
						{
							"include": "#jsobject"
						},
						{
							"include": "#jswords"
						},
						{
							"include": "#jsoperators"
						},
						{
							"include": "#jsstrings"
						},
						{
							"include": "#jsdot"
						},
						{
							"include": "#jsbrackets"
						}
					]
				}
			}
		},
		"jswords": {
			"match": "(\\w)\\s*(\\w)*",
			"captures": {
				"0": {
					"patterns": [
						{
							"include": "#jskeywords"
						},
						{
							"include": "#jskeywords2"
						}
					]
				}
			}
		},
		"jskeywords": {
			"match": "\\b(if|let|else|for|do|while|var)\\b",
			"captures": {
				"0": {
					"name": "keyword.control"
				}
			}
		},
		"jskeywords2": {
			"match": "\\b(function|console)\\b",
			"captures": {
				"1": {
					"name": "support.function"
				},
				"2": {
					"name":"support.type"
				}
			}
		},
		"jsobject": {
			"match": "([a-zA-Z_][a-zA-Z0-9_]*)\\.",
			"captures": {
				"0": {
					"name": "support.function"
				},
				"1": {
					"name": "support.variable"
				}
			}
		},
		"jsoperators": {
			"match": "(==|===|=|<|>|!|\\?|\\*|\\+|-|\\\\|%|\\^|\\$)",
			"captures": {
				"0": {
					"name": "keyword.operator.new"
				}
			}
		},
		"jsdot": {
			"match": "[.]",
			"captures": {
				"0": {
					"name": "comment.block.documentation"
				}
			}
		},
		"jsstrings": {
			"match": "\\\".*\\\"",
			"captures": {
				"0": {
					"name": "string.quoted.double"
				}
			}
		},
		"jsbrackets": {
			"match": "(\\[|\\])|(\\(|\\))|({|})",
			"captures": {
				"0": {
					"name": "string.quoted.single"
				},
				"2": {
					"name": "comment.block.documentation"
				},
				"1": {
					"name": "support.function.section"
				}
			}
		},
		"number": {
			"match": "\\b([0-9]+(\\.[0-9])?)\\b",
			"captures": { "1": {"name": "keyword.control"} }
		}
	}
}